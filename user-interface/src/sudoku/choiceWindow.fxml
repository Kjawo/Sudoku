<GridPane alignment="TOP_CENTER" hgap="10" prefHeight="450.0" prefWidth="554.0" vgap="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sudoku.ChoiceWindowController">
   <children>
      <Accordion GridPane.columnIndex="1" GridPane.rowIndex="2" />
      <Label fx:id="levelChoice" alignment="TOP_CENTER" text="%choose_level" GridPane.rowIndex="1">
         <font>
            <Font size="25.0" />
         </font>
      </Label>
      <Button fx:id="Play" alignment="CENTER" mnemonicParsing="false" onAction="#PlayAction" text="%play" GridPane.rowIndex="20">
         <font>
            <Font size="25.0" />
         </font>
      </Button>
      <RadioButton mnemonicParsing="false" selected="true" text="%easy" userData="easy" GridPane.rowIndex="7">
         <toggleGroup>
            <ToggleGroup fx:id="radio_group" />
         </toggleGroup>
         <font>
            <Font size="20.0" />
         </font>
      </RadioButton>
      <RadioButton mnemonicParsing="false" text="%medium" toggleGroup="$radio_group" userData="medium" GridPane.rowIndex="11">
         <font>
            <Font size="20.0" />
         </font>
      </RadioButton>
      <RadioButton mnemonicParsing="false" text="%hard" toggleGroup="$radio_group" userData="hard" GridPane.rowIndex="14">
         <font>
            <Font size="20.0" />
         </font>
      </RadioButton>
      <ComboBox fx:id="comboBoxLang" prefWidth="150.0" GridPane.rowIndex="18" onAction="#langAction">
         <items>
            <FXCollections fx:factory="observableArrayList">
               <String fx:value="Polski" />
               <String fx:value="English" />
            </FXCollections>
         </items>
      </ComboBox>
      <Label prefHeight="29.0" prefWidth="150.0" text="%choose_language" GridPane.rowIndex="17" />
   </children>
